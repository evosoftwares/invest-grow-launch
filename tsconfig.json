{
  "compilerOptions": {
    "target": "es6",              // Compila para uma vers찾o de JS moderna que os navegadores entendem
    "module": "es6",              // Usa o sistema de m처dulos padr찾o do JS
    "outDir": "./dist",           // **Importante: Onde colocar os arquivos .js compilados**
    "rootDir": "./src",           // **Importante: Onde est찾o seus arquivos .ts originais**
    "strict": false,              // Menos restritivo para facilitar o build
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "jsx": "react-jsx",           // Para suporte ao React
    "lib": ["ES2020", "DOM", "DOM.Iterable"],
    "skipLibCheck": true,
    "moduleResolution": "node",
    "allowImportingTsExtensions": false,  // Para evitar erro com .tsx
    "noImplicitAny": false,
    "strictNullChecks": false,
    "baseUrl": ".",
    "paths": {
      "@/*": ["./src/*"]
    }
  },
  "include": ["src/**/*"]
}
